<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:faStyling="using:FluentAvalonia.Styling"
			 x:Class="Jellyfin2SamsungCrossOS.App"
             xmlns:local="using:Jellyfin2SamsungCrossOS"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
		<faStyling:FluentAvaloniaTheme PreferSystemTheme="True" />
		<Style Selector="Window">
			<Setter Property="Icon" Value="avares://Jellyfin2SamsungCrossOS/Assets/jelly2sams.ico" />
		</Style>
    </Application.Styles>
</Application>