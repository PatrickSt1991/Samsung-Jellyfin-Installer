<Window x:Class="Samsung_Jellyfin_Installer.Views.JellyfinLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:Samsung_Jellyfin_Installer.Converters"
        xmlns:local="clr-namespace:Samsung_Jellyfin_Installer.Views"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        mc:Ignorable="d"
        Title="Validate Jellyfin" Height="225" Width="300">
    <Grid>
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

        <materialDesign:Card Padding="10" Margin="0,10,0,0" Background="#FF000B25" Foreground="White" HorizontalAlignment="Center" Width="275" VerticalAlignment="Top">
            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock}" HorizontalAlignment="Center" Text="{loc:Localize lbl_ValidateJellyfin}"/>
        </materialDesign:Card>

        <StackPanel Margin="10" Grid.Row="1">
            <Grid Margin="14 0 14 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- Label -->
                    <ColumnDefinition Width="*" />
                    <!-- Control -->
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Username" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding JellyfinUsername}" Style="{DynamicResource MaterialDesignTextBox}" Margin="0,0,0,10"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Password" VerticalAlignment="Center" Margin="0,0,12,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding JellyfinPassword}" Style="{DynamicResource MaterialDesignTextBox}" Margin="0,0,0,10"/>
            </Grid>
            <Button 
                    Grid.Row="0"
                    Content="{loc:Localize lbl_ValidateLogin}"
                    Command="{Binding ValidateLoginCommand}"
                    VerticalAlignment="Center"
                    Style="{DynamicResource MaterialDesignRaisedLightButton}"
                    FontSize="14" Margin="0,15,0,0"
                    Foreground="White"
                    Background="#FF000B25"/>
        </StackPanel>

    </Grid>
</Window>
